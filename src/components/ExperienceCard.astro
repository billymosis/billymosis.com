---
type Props = {
  title: string;
  webLink: string;
  years: string;
  position: string;
  skills: Array<string>;
};

const { title, webLink, years, position, skills } = Astro.props;
---

<div
  class="card w-full transition-all duration-300 bg-white/90 dark:bg-gray-800/90 rounded-lg shadow-md hover:shadow-lg border border-gray-200 dark:border-gray-700 p-6 hover:border-amber-400/30 dark:hover:border-amber-600/30"
>
  <div class="card-body flex flex-col gap-4 p-0">
    <div class="flex justify-between items-start flex-col sm:flex-row gap-4 sm:gap-0">
      <div class="grid gap-1">
        <div class="flex gap-2 items-center">
          <h2 class="card-title text-xl font-bold m-0 text-gray-900 dark:text-white">
            {title}
          </h2>
          <a 
            target="_blank" 
            href={webLink}
            class="text-gray-500 dark:text-gray-400 hover:text-amber-600 dark:hover:text-amber-400 transition-colors"
            aria-label="Visit website"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-arrow-up-right"
            >
              <path d="M7 7h10v10"></path>
              <path d="M7 17 17 7"></path>
            </svg>
          </a>
        </div>
        <span class="text-gray-700 dark:text-gray-300 font-medium">{position}</span>
      </div>
      <div class="whitespace-nowrap font-medium text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-700/50 px-3 py-1 rounded-full text-sm">
        {years}
      </div>
    </div>
    
    <div class="prose dark:prose-invert max-w-none text-gray-700 dark:text-gray-300 pt-2">
      <slot />
    </div>
    
    <div class="flex flex-wrap gap-2 pt-2">
      {skills.map((skill) => (
        <span class="px-3 py-1 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
          {skill}
        </span>
      ))}
    </div>
  </div>
</div>

<style>
  .card {
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
  }
  .card:hover {
    transform: translateY(-2px);
  }
</style>
